@model ProductsMVC.Models.Product
    <div class="panel-heading">
        Create Product
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Add", "Home"))
        {        <div class="form-group">
            <label>Product name</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "formcontrol" })
        </div>
            <div class="form-group">
                <label>Price</label>
                @Html.TextBoxFor(m => m.Price, new { @class = "formcontrol" })

                <div class="form-group">
                    <label>Article number</label>
                    @Html.TextBoxFor(m => m.ArticleNumber, new { @class = "formcontrol" })
                </div>        <button type="submit" class="btn btn-primary">Save</button>   }
    </div>
        }